{
     "configurations": [
         {
             "name": "Mac",
             "includePath": [
                 "${workspaceFolder}/**",
                 "/usr/local/include",  // Homebrew로 설치된 라이브러리 경로
                 "/usr/local/opt/openssl/include",  // OpenSSL 헤더 경로
                 "/usr/local/opt/boost/include",  // Boost 헤더 경로
